{
    "name": "Roaming Calculator",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "This is calculator extension used for any on demand calculations.",
    "icons": 
    {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "permissions": 
    [
      "tabs",
      "storage",
      "activeTab"
    ],
    "background": 
    {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": 
    {
      "default_icon": 
      {
        "16": "icon16.png",
        "32": "icon32.png"
      },
      "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "content_scripts": 
    [
        {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"],
        "run_at": "document_end"
        }
    ]
  }
  